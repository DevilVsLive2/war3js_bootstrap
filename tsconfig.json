{
    "compilerOptions": {
        "module": "ES6",
        "target": "es2021",
        "lib": ["es2022"],
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "build/tsc/lib",
        "declaration": true,
        "esModuleInterop": true,
        "declarationDir": "build/tsc/types",
        "baseUrl": "./src",
        "types": ["@war3js/text-decoding-types"]
    },
    "include": ["src/**/*"],
    "exclude": ["../typesAppenderConfig.d.ts"]
}
